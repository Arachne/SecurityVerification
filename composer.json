{
    "name": "arachne/security-verification",
    "description": "Integrates Arachne/Security into Arachne/Verifier.",
    "type": "library",
    "keywords": [ "nette", "arachne", "security" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6.0|^7.0.0",
        "arachne/service-collections": "^0.1.0",
        "arachne/security": "^0.3.0",
        "arachne/verifier": "^0.9.0",
        "nette/di": "^2.4.0",
        "nette/security": "^2.4.0",
        "symfony/property-access": "^3.2.0"
    },
    "require-dev": {
        "arachne/codeception": "^0.7.3",
        "codeception/codeception": "^2.2.0",
        "eloquent/phony": "^0.13.5",
        "latte/latte": "^2.4.0",
        "tracy/tracy": "^2.4.0"
    },
    "minimum-stability": "alpha",
    "autoload": {
        "psr-4": {
            "Arachne\\SecurityVerification\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/src",
            "Tests\\Integration\\": "tests/integration/src"
        }
    },
    "scripts": {
        "all": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "tools": "sh composer-tools.sh",
        "fix": "\"vendor-tools/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor-tools/bin/phpstan\" analyse --no-progress --level=4 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run"
        ]
    }
}
